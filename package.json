{
  "name": "react-notes",
  "version": "1.0.0",
  "engines": {
    "npm": "6.14.12",
    "node": "14.16.1"
  },
  "description": "React Notes App",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "full-install": "npm run server:install && npm run client:install",
    "server:start-dev": "nodemon app.js",
    "server:start-prod": "node app.js",
    "server:install": "npm install",
    "client:start-dev": "(cd client && npm run start)",
    "client:install": "(cd client && npm install)",
    "client:build": "(cd client && npm run build)",
    "dev": "cross-env NODE_ENV=dev concurrently \"npm run server:start-dev\" \"npm run client:start-dev\"",
    "prod": "npm run server:start-prod",
    "prod:predeploy": "npm run deploy && npm run prod",
    "deploy": "npm run full-install && npm run client:build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "heroku-postbuild": "npm run client:install && npm run client:build",
    "mongo-ubuntu:update": "(sudo apt update && sudo apt upgrade)",
    "mongo-ubuntu:prepare": "(cd installMongo/Ubuntu && chmod +x mongo_ubuntu_setup.sh && chmod +x mongo_ubuntu_install.sh)",
    "mongo-ubuntu:setup": "(cd installMongo/Ubuntu && ./mongo_ubuntu_setup.sh)",
    "mongo-ubuntu:full-setup": "npm run mongo-ubuntu:update && npm run mongo-ubuntu:prepare && npm run mongo-ubuntu:setup",
    "mongo-ubuntu:start": "(cd installMongo/Ubuntu && ./mongo_ubuntu_install.sh)",
    "mongo-windows:start": "(cd installMongo/Windows && start mongo_win_install.bat)",
    "doc": "jsdoc -c jsdoc.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maxchistt/react-notes.git"
  },
  "keywords": [
    "react",
    "mern",
    "notes"
  ],
  "author": "Maxim Chistyakov <max.chistt@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/maxchistt/react-notes/issues"
  },
  "homepage": "https://github.com/maxchistt/react-notes#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.6.0",
    "express": "^4.17.1",
    "express-validator": "^6.11.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.13"
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "jsdoc": "^3.6.7",
    "nodemon": "^2.0.7"
  }
}
